quiz_questions = [
    {
        "question": "What subject is at 9 AM on Monday?",
        "options": ["Math", "Science", "English", "History"],
        "answer": "Math"
    },
    {
        "question": "What subject is at 10 AM on Tuesday?",
        "options": ["Math", "Science", "English", "History"],
        "answer": "Science"
    },
    {
        "question": "What subject is at 11 AM on Wednesday?",
        "options": ["Math", "Science", "English", "History"],
        "answer": "English"
    },
    {
        "question": "What subject is at 12 PM on Thursday?",
        "options": ["Math", "Science", "English", "History"],
        "answer": "History"
    }
]

score = 0
for i, question in enumerate(quiz_questions):
    print(f"Question {i + 1}: {question['question']}")
    for j, option in enumerate(question['options']):
        print(f"{j + 1}. {option}")
    user_answer = input("Enter your answer (1-4): ")
    if question['options'][int(user_answer) - 1] == question['answer']:
        print("Correct!")
        score += 1
    else:
        print("Incorrect.")

print(f"You scored {score}/{len(quiz_questions)}.")
